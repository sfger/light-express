{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./components/*"],
			"~/*": ["./public/*"]
		},
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
		"lib": ["es2015", "dom", "es5"],
		"sourceMap": true
	},
	"exclude": [
		"node_modules"
	]
}
