{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./components/*"],
      "~/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "sourceMap": true
  },
  "files": [
    "require.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
